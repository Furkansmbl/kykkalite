@model CreateHammadelerDto
@{
    ViewData["Title"] = "CreateHammaddeler";
    Layout = "~/Views/Admin/Index.cshtml";
}


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni Hammadde Ekleme Sayfası</h6>
                <form method="post">
                   <label>HammaddeGrupId</label>
                    @Html.DropDownListFor(x=>x.HammaddeGrupId,(List<SelectListItem>)ViewBag.v,new {@class="form-control"})
                     <br />
                    <label>MalzemeKodu</label>
                    <input type="text" asp-for="MalzemeKodu" class="form-control" />
                    <br />
                    <label>MalzemeAciklamasi</label>
                    <input type="text" asp-for="MalzemeAciklamasi" class="form-control" />
                    <br />
                    <label>PersonelSicilNo</label>
                    <input type="text" asp-for="PersonelSicilNo" class="form-control" />
                    <br />
                    <label>EklenmeGuncellenmeTarihi</label>
                    <input type="datetime" asp-for="EklenmeGuncellenmeTarihi" class="form-control" />
                    <br />
                    <label>KullanımDurumu</label>
                    <input type="text" asp-for="KullanımDurumu" class="form-control" />
                    <br />
                    <button class="btn btn-primary">Hammaddeyi Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div
