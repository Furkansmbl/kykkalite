@model CreateHMnumuneDto
@{
    ViewData["Title"] = "CreateHMnumune";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni Hammadde Numune Ekleme Sayfası</h6>
                <form method="post">
                    <label>HammaddeId</label>
                    <input type="text" asp-for="HammaddeId" class="form-control" />
                    <br />
                    <label>SiraNo</label>
                    <input type="text" asp-for="SiraNo" class="form-control" />
                    <br />
                    <label>Tarihi</label>
                    <input type="text" asp-for="Tarihi" class="form-control" />
                    <br />
                    <label>IrsaliyeNo</label>
                    <input type="text" asp-for="IrsaliyeNo" class="form-control" />
                    <br />
                    <label>MalzemeLotSeriNo</label>
                    <input type="text" asp-for="MalzemeLotSeriNo" class="form-control" />
                    <br />
                    <label>KykbarkodNo</label>
                    <input type="text" asp-for="KykbarkodNo" class="form-control" />
                    <br />
                     <label>MalzemeUretimTarihi</label>
                    <input type="text" asp-for="MalzemeUretimTarihi" class="form-control" />
                    <br /> 
                    <label>MalzemeSkt</label>
                    <input type="text" asp-for="MalzemeSkt" class="form-control" />
                    <br />
                    <label>MalzemeMiktarı</label>
                    <input type="text" asp-for="MalzemeMiktarı" class="form-control" />
                    <br />
                    <label>MiktarBirimi</label>
                    <input type="text" asp-for="MiktarBirimi" class="form-control" />
                    <br />
                    <label>Aciklama</label>
                    <input type="text" asp-for="Aciklama" class="form-control" />
                    <br />
                    <label>OnayDurumu</label>
                    <input type="text" asp-for="OnayDurumu" class="form-control" />
                    <br /> 
                    <label>AmirOnayDurumu</label>
                    <input type="text" asp-for="AmirOnayDurumu" class="form-control" />
                    <br />
                    <label>EklenmeTarihi</label>
                    <input type="text" asp-for="EklenmeTarihi" class="form-control" />
                    <br />
                    <label>PersonelSicilNo</label>
                    <input type="text" asp-for="PersonelSicilNo" class="form-control" />
                    <br />
                    <button class="btn btn-primary">Hammadde Numuneyi Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div


