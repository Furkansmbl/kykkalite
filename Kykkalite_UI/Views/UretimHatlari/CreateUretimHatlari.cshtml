@model CreateUretimHatlariDto
@{
    ViewData["Title"] = "CreateUretimHatlari";
    Layout = "~/Views/Admin/Index.cshtml";
}


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni Uretim Hattı Ekleme Sayfası</h6>
                <form method="post">
                    <label>FabrikaId</label>
                    <input type="member" asp-for="FabrikaId" class="form-control" />
                    <br />
                    <label>HatAdiAciklamasi</label>
                    <input type="text" asp-for="HatAdiAciklamasi" class="form-control" />
                    <br />
                    <button class="btn btn-primary">Uretim Hattı Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>



