@model CreateParametrelerDto
@{
    ViewData["Title"] = "CreateParametreler";
    Layout = "~/Views/Admin/Index.cshtml";
}


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni Parametre Ekleme Sayfası</h6>
                <form method="post">
                    <label>KontrolParametresi</label>
                    <input type="text" asp-for="KontrolParametresi" class="form-control" />
                    <br />
                     <label>ParametreTipiOlcmeGozlem</label>
                    <select asp-for="ParametreTipiOlcmeGozlem" class="form-select">
                        <option value="true">Aktif</option>
                        <option value="false">Pasif</option>
                    </select>
                    <br />
                    <label>Birimi</label>
                    <input type="text" asp-for="Birimi" class="form-control" />
                    <br />
                    <label>PersonelSicilNo</label>
                    <input type="text" asp-for="PersonelSicilNo" class="form-control" />
                    <br />
                    <label>EklenmeGuncellenmeTarihi</label>
                    <input type="datetime" asp-for="EklenmeGuncellenmeTarihi" class="form-control" />
                    <br />
                     <label>KullanımDurumu</label>
                    <select asp-for="KullanimDurumu" class="form-select">
                        <option value="true">Aktif</option>
                        <option value="false">Pasif</option>
                    </select>
                    <br />
                    <button class="btn btn-primary">Parametreyi Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div

