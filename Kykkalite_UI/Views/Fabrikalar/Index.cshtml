@model List<ResultFabrikalarDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Fabrikalar</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">FabrikaID</th>
                                <th scope="col">FabrikaAdi</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.FabrikaID</th>
                                    <td>@item.FabrikaAdi</td>
                                    <td><a href="/Fabrikalar/UpdateFabrikalar/@item.FabrikaID" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Fabrikalar/CreateFabrikalar/" class="btn btn-outline-info">Yeni Fabrika Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>

