@model CreateUPatamaDto
@{
    ViewData["Title"] = "CreateUPatama";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Ürün Parametre ekleme Sayfası</h6>
                <form method="post">
                    <label>Kontrol Parametresi</label>
                    @Html.DropDownListFor(x => x.UpatamaKodu, (List<SelectListItem>)ViewBag.vvv, new { @class = "form-control" })
                    <br />
                    <label>Urun Adı</label>
                    @Html.DropDownListFor(x => x.UrunId, (List<SelectListItem>)ViewBag.u, new { @class = "form-control" })
                    <br />
                    <label>UpatamaKodu</label>
                    <input type="text" asp-for="UpatamaKodu" class="form-control" />
                    <br />
                    <label>ParametreKritiklikSeviyesi</label>
                    <select asp-for="ParametreKritiklikSeviyesi" class="form-select">
                        <option value="true">Aktif</option>
                        <option value="false">Pasif</option>
                    </select>
                    <br />
                    <label>KontrolDegeriNominal</label>
                    <input type="number" step="any" asp-for="KontrolDegeriNominal" class="form-control" />
                    <br />
                    <label>AltOnaySiniri</label>
                    <input type="number" step="any" asp-for="AltOnaySiniri" class="form-control" />
                    <br />
                    <label>UstOnaySiniri</label>
                    <input type="number" step="any" asp-for="UstOnaySiniri" class="form-control" />
                    <br />
                    <label>AltSartliKabulSiniri</label>
                    <input type="number" step="any" asp-for="AltSartliKabulSiniri" class="form-control" />
                    <br />
                    <label>UstSartliKabulSiniri</label>
                    <input type="number" step="any" asp-for="UstSartliKabulSiniri" class="form-control" />
                    <br />
                    <label>Cihazlar</label>
                    @Html.DropDownListFor(x => x.CihazID, (List<SelectListItem>)ViewBag.vv, new { @class = "form-control" })
                    <br />
                    <label>ReferansDokuman</label>
                    <input type="text" asp-for="ReferansDokuman" class="form-control" />
                    <br />
                    <label>Aciklama</label>
                    <input type="text" asp-for="Aciklama" class="form-control" />
                    <br />
                    <label>Fabrikalar</label>
                    @Html.DropDownListFor(x => x.FabrikaId, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
                    <br />
                    <input type="hidden" asp-for="PersonelSicilNo" class="form-control" value="@ViewBag.PersonelSicilNo" />
                    <input type="hidden" class="form-control" asp-for="EklenmeTarihi" />

                    <label>KullanımDurumu</label>
                    <select asp-for="KullanımDurumu" class="form-select">
                        <option value="true">Aktif</option>
                        <option value="false">Pasif</option>
                    </select>
                    <br />
                    <button class="btn btn-success">Ürün Parametre ekle</button>
                </form>
            </div>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var now = new Date();
            var formattedDate = now.toISOString().slice(0, 16);
            document.querySelector('[name="EklenmeTarihi"]').value = formattedDate;
        });
    </script>





