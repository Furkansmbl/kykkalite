@model UpdateUrunlerDto
@{
    ViewData["Title"] = "UpdateUrunler";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Ürün Güncelleme Sayfası</h6>
                <form method="post">
                    <label>UrunId</label>
                    <input type="member" asp-for="UrunId" class="form-control" />
                    <br />
                    <label>UrunGrupId</label>
                    <input type="member" asp-for="UrunGrupId" class="form-control" />
                    <br />
                    <label>MalzemeKodu</label>
                    <input type="text" asp-for="MalzemeKodu" class="form-control" />
                    <br />
                    <label>MalzemeAciklamasi</label>
                    <input type="text" asp-for="MalzemeAciklamasi" class="form-control" />
                    <br />
                    <label>PersonelSicilNo</label>
                    <input type="text" asp-for="PersonelSicilNo" class="form-control" />
                    <br />
                    <label>EklenmeGuncellenmeTarihi</label>
                    <input type="datetime" asp-for="EklenmeGuncellenmeTarihi" class="form-control" />
                    <br />
                    <label>KullanımDurumu</label>
                    <select asp-for="KullanimDurumu" class="form-select">
                        <option value="true">Aktif</option>
                        <option value="false">Pasif</option>
                    </select>
                    <br />
                    <button class="btn btn-primary">Ürün Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div

