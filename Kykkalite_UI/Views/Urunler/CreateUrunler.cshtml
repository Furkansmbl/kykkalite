@model CreateUrunlerDto
@{
    ViewData["Title"] = "CreateUrunler";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni Ürün Ekleme Sayfası</h6>
                <form method="post">
                    <label>UrunGrubu</label>
                    @Html.DropDownListFor(x=>x.UrunGrupId,(List<SelectListItem>)ViewBag.v,new {@class="form-control"})
                     <br />
                    <label>MalzemeKodu</label>
                    <input type="text" asp-for="MalzemeKodu" class="form-control" />
                    <br />
                    <label>MalzemeAciklamasi</label>
                    <input type="text" asp-for="MalzemeAciklamasi" class="form-control" />
                    <br />
                    <label for="PersonelSicilNo">Personel Sicil No:</label>
                    <select id="PersonelSicilNo" name="PersonelSicilNo" class="form-control" asp-for="PersonelSicilNo">
                    <option value="">Seçiniz</option>
                    @foreach (var sicilNo in Model.PersonelSicilNo)
                    {
                         <option value="@sicilNo">@sicilNo</option>
                            }
                    </select>
                    <br />
                    <label>EklenmeGuncellenmeTarihi</label>
                    <input type="DateTimw" asp-for="EklenmeGuncellenmeTarihi" class="form-control" />
                    <br />
                    <label>KullanımDurumu</label>
                    <select asp-for="KullanimDurumu" class="form-select">
                        <option value="true">Aktif</option>
                        <option value="false">Pasif</option>
                    </select>
                    <br />
                    <button class="btn btn-primary">Ürünü Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div

