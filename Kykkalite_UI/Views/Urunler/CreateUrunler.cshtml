@model CreateUrunlerDto
@{
    ViewData["Title"] = "CreateUrunler";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni Ürün Ekleme Sayfası</h6>
                <form method="post">
                    <label>UrunGrubu</label>
                    @Html.DropDownListFor(x => x.UrunGrupId, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
                    <br />
                    <label>MalzemeKodu</label>
                    <input type="text" asp-for="MalzemeKodu" class="form-control" />
                    <br />
                    <label>MalzemeAciklamasi</label>
                    <input type="text" asp-for="MalzemeAciklamasi" class="form-control" />
                    <input type="hidden" asp-for="PersonelSicilNo" class="form-control" value="@ViewBag.PersonelSicilNo" />
                    <br />
                    <label>KullanımDurumu</label>
                    <select asp-for="KullanimDurumu" class="form-select">
                        <option value="true">Aktif</option>
                        <option value="false">Pasif</option>
                    </select>
                    <br />

                    <!-- EklenmeGuncellenmeTarihi alanını gizledik -->
                    <input type="hidden" class="form-control" asp-for="EklenmeGuncellenmeTarihi" />

                    <button class="btn btn-primary">Ürünü Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    // Sayfa yüklendiğinde çalışacak olan kod
    document.addEventListener('DOMContentLoaded', function () {
        // Eklenme/Güncellenme Tarihini al
        var now = new Date();

        // YYYY-MM-DDTHH:MM formatına dönüştür
        var formattedDate = now.toISOString().slice(0, 16);

        // EklenmeGuncellenmeTarihi alanını bul ve değerini güncelle
        document.querySelector('[name="EklenmeGuncellenmeTarihi"]').value = formattedDate;
    });
</script>