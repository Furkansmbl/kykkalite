@model List<ResultUrunGruplarİDto>
@{
    Layout = "~/Views/Admin/Index.cshtml";
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Ürün Grupları</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">UrunGrupId</th>
                                <th scope="col">UgrupAdi</th>
                                <tvdxh scope="col">Güncelle</tvdxh>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.UrunGrupId</th>
                                    <td>@item.UgrupAdi</td>
                                    <td><a href="/UrunGruplari/UpdateUrunGruplari/" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/UrunGruplari/CreateUrunGruplari/" class="btn btn-outline-info">Yeni Ürün Grubu Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>