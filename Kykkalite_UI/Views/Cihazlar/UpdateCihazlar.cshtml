@model UpdateCihazlarDto
@{
    ViewData["Title"] = "UpdateCihazlar";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Cihaz Güncelleme Sayfası</h6>
                <form method="post">
                    <label>CihazID</label>
                    <input type="member" asp-for="CihazID" class="form-control" />
                    <br />
                    <label>CihazKodu</label>
                    <input type="text" asp-for="CihazKodu" class="form-control" />
                    <br />
                    <label>FabrikaID</label>
                    <input type="member" asp-for="FabrikaID" class="form-control" />
                    <br />
                    <label>PersonelSicilNo</label>
                    <input type="text" asp-for="PersonelSicilNo" class="form-control" />
                    <br />
                    <label>CihazKodu</label>
                    <input type="text" asp-for="CihazKodu" class="form-control" />
                    <br />
                    <label>EklenmeGuncellenmeTarihi</label>
                    <input type="datetime" asp-for="EklenmeGuncellenmeTarihi" class="form-control" />
                    <br />
                    <label>CihazKodu</label>
                    <input type="text" asp-for="CihazKodu" class="form-control" />
                    <br />
                    <label>Kullanım Durumu</label>
                    <select asp-for="KullanımDurumu" class="form-select">
                        <option value="true">Aktif</option>
                        <option value="false">Pasif</option>
                    </select>
                    <br />
                    <button class="btn btn-success">Kategoriyi Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>
